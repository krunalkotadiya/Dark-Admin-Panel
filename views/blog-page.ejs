<%- include("header") %>

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Blog Form</h6>
                    <form method="post" action="/insert-blog" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Blog Title</label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" name="title">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Description</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" name="description">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Date</label>
                            <input type="date" class="form-control" id="exampleInputPassword1" name="date">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Author</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" name="author">
                        </div>
                        <div class="mb-3">
                            <!-- <label for="formFile" class="form-label">Default file input example</label> -->
                            <input class="form-control bg-dark" type="file" id="formFile" name="avtar">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">Slider Table</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Blog Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Action</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                               <% data.map((val,index)=>{%>

                                <tr>
                                    <td>
                                        <%= index + 1%>
                                    </td>
                                    <td>
                                        <%= val.title %>
                                    </td>
                                    <td>
                                        <%= val.description.substring(0,20) %>
                                    </td>
                                    <td>
                                        <%= val.date %>
                                    </td>
                                    <td>
                                        <%= val.author %>
                                    </td>
                                    <td>
                                        <img src="<%= val.avtar %>" alt="Image" width="100">
                                    </td>
                                    <td>
                                        <% if(val.status === '1' ) { %>
                                                <a href="/Active-blog/<%= val.id %>" class="btn btn-primary">Active</a>
                                        <% } else { %>
                                                <a href="/Deactive-blog/<%= val.id %>" class="btn btn-warning">Deactive</a>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/delete-blog/<%= val._id %>" class="btn btn-danger">Delete</a> 
                                        <a href="/edit-blog/<%= val.id %>" class="btn btn-success">Edit</a>
                                    </td>
                                </tr>


                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



   

    <%- include("footer") %>